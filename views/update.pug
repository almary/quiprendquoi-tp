include ../partials/header.pug
h1 <a href="/">Qui prend quoi ?</a>
<main>
  <div class="subtitle">
    <div class="subtitle">
      <div class="subtitle__content">
        h2 Modifier l'événement
      </div>
    </div>
  </div>
  form(method="post" action=`/party/${party._id}?_method=PATCH`).newParty
    div.newParty__fields
      label(class="newParty__fields--label" for="name") Nom de l'événement
      input(class="newParty__fields--input" name="name" id="name" required minlength="3" placeholder="Nouvel an" value=`${title}`)
      label(class="newParty__fields--label" for="author") Nom de l'organisateur
      input(class="newParty__fields--input" name="author" id="author" required minlength="3" placeholder="Jean Dupont" value=`${party.author}`)
      label(class="newParty__fields--label" for="date") Date de l'événement
      input(class="newParty__fields--input" required name="date" id="date" type="date" value=`${date}`)
    button(type="submit") Modifier l'événement
</main>